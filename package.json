{
  "name": "homehost",
  "version": "1.9.0",
  "private": true,
  "author": "ridhwaans",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf build && npm install",
    "build": "webpack serve --config webpack.dev.js",
    "server": "nodemon server/server",
    "start": "concurrently --kill-others-on-fail \"npm run build\" \"npm run start\"",
    "build:prod": "NODE_ENV=production webpack --config webpack.prod.js",
    "server:prod": "NODE_ENV=production node server/server",
    "start:prod": "npm run build:prod && npm run server:prod",
    "db:init": "npx prisma generate",
    "db:squash": "rm -rf server/prisma/migrations; npx prisma migrate dev",
    "db:browse": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "prepare": "husky install",
    "pre-commit-lint": "npx lint-staged"
  },
  "prisma": {
    "schema": "server/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "eslint --fix", "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 18.9.0",
    "npm": ">= 8.19.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@prisma/client": "^4.3.1",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "fast-average-color": "^9.1.1",
    "figlet": "^1.5.2",
    "get-audio-duration": "^3.1.0",
    "qs": "^6.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-netflix-player": "^1.2.0",
    "react-router-dom": "^6.4.0",
    "swr": "^1.3.0",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/node": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.1.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.1.3",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.0",
    "webpack-merge": "^5.8.0"
  }
}
